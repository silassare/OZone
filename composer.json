{
  "name": "ozone/oz",
  "version": "2.0.0",
  "description": "O'Zone is a framework to build RESTFul API and website.",
  "license": "MIT",
  "keywords": [
    "ozone",
    "api-generator",
    "ozone-framework",
    "framework",
    "php",
    "api",
    "website"
  ],
  "require": {
    "php": ">=5.6.0",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-gd": "*",
    "ext-libxml": "*",
    "ext-simplexml": "*",
    "silassare/otpl": "dev-master",
    "silassare/gobl": "dev-master",
    "silassare/kli": "dev-master",
    "claviska/simpleimage": "^3.3",
    "psr/http-message": "^1.0"
  },
  "config": {
    "vendor-dir": "oz/oz_vendors"
  },
  "homepage": "https://github.com/silassare/ozone#readme",
  "archive": {
    "exclude": [
      "/ignore"
    ]
  },
  "autoload": {
    "psr-4": {
      "OZONE\\OZ\\": "oz"
    }
  },
  "authors": [
    {
      "name": "Emile Silas Sare",
      "email": "emile.silas@gmail.com",
      "homepage": "https://github.com/silassare"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true
}
