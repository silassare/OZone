{
	"name": "silassare/ozone",
	"version": "3.0.0",
	"description": "OZone is a framework to build RESTFul API and website.",
	"license": "MIT",
	"keywords": [
		"ozone",
		"api-generator",
		"ozone-framework",
		"framework",
		"php",
		"api",
		"website"
	],
	"config": {
		"platform": {
			"php": "8.1"
		}
	},
	"require": {
		"php": ">=8.1",
		"ext-pdo": "*",
		"ext-json": "*",
		"ext-gd": "*",
		"ext-libxml": "*",
		"ext-simplexml": "*",
		"ext-posix": "*",
		"silassare/otpl": "=1.1.9",
		"silassare/gobl": "dev-dev",
		"silassare/kli": "dev-dev",
		"silassare/php-utils": "dev-main",
		"claviska/simpleimage": "^3.7.0",
		"psr/http-message": "^1.0"
	},
	"require-dev": {
		"roave/security-advisories": "dev-latest",
		"oliup/oliup-cs-php": "dev-main",
		"phpunit/phpunit": "^9.5.26",
		"vimeo/psalm": "^4.30"
	},
	"bin": [
		"bin/oz",
		"bin/ozone"
	],
	"homepage": "https://github.com/silassare/ozone#readme",
	"archive": {
		"exclude": [
			"/ignore"
		]
	},
	"autoload": {
		"psr-4": {
			"OZONE\\OZ\\": "oz",
			"OZONE\\OZ\\Tests\\": "tests"
		},
		"files": [
			"oz/oz_default/oz_bootstrap.php"
		]
	},
	"authors": [
		{
			"name": "Emile Silas Sare",
			"email": "emile.silas@gmail.com",
			"homepage": "https://github.com/silassare"
		}
	],
	"prefer-stable": true,
	"minimum-stability": "dev"
}
