<html lang="<%$.oz->getLanguage()%>">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport"
			  content="width=device-width, height=device-height, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no"/>

		<title>Error</title>

		<link href="https://fonts.googleapis.com/css?family=Ubuntu&display=swap" rel="stylesheet">
		<style rel="stylesheet">
			body {
				font-family: Ubuntu, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Oxygen-Sans, Cantarell, "Helvetica Neue", "Open Sans", sans-serif;
				-webkit-font-smoothing: antialiased;
				-moz-osx-font-smoothing: grayscale;
				font-size: 1.2em;
				margin: 0;
				width: 100%;
				height: 100%;
				background-color: #F5F5F5;
			}

			#oz-box {
				width: 80%;
				max-width: 800px;
				margin: 100px auto auto auto;
				padding: 50px 20px;
				box-shadow: 0 1px 5px rgba(0, 0, 0, 0.1);
				border: 1px solid white;
				background: white;
				border-radius: 3px;
			}

			.oz-title {
				font-size: 3em;
				color: #ff5064;
				text-align: center;
			}

			.oz-desc {
				color: #333333;
				margin: 30px 0;
			}

			.oz-desc-item {
				padding: 10px;
				background-color: #E6E6E6;
				word-break: break-word;
			}

			.oz-desc-item:nth-child(odd) {
				background-color: #F7F7F7;
			}

			.oz-btn {
				display: block;
				text-align: center;
				background-color: #ff5064;
				margin: 10px auto;
				padding: 15px;
				max-width: 50%;
				text-decoration: none;
				color: #FFFFFF;
				border: 2px solid #ff5064;
				border-radius: 3px;
			}

			.oz-btn:hover {
				background-color: #ffffff;
				color: #ff5064;
			}

			@media all and (max-width: 360px) {
				.oz-title {
					font-size: 2em;
				}
			}
		</style>
	</head>
	<body>
		<div id="oz-box">
			<span class="oz-logo"></span>
			<div class="oz-title"><%$.i18n( $.oz_error_title, $.oz_error_data)%></div>
			<div class="oz-desc">
				<div class="oz-desc-item"><%$.i18n($.oz_error_desc, $.oz_error_data)%></div>
				<div class="oz-desc-item"><%$.oz_error_url%></div>
			</div>
			<%if(@has($ ,'oz_error_back_url')){%>
			<a class="oz-btn" href="<%$.oz_error_back_url%>"><%$.i18n('OZ_ERROR_GO_BACK_BTN')%></a>
			<%} else {%>
			<a class="oz-btn" href="<%$.oz->getBaseURL()%>"><%$.i18n('OZ_ERROR_GO_HOME_BTN')%></a>
			<%}%>
		</div>
	</body>
</html>